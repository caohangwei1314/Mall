<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="mall-shop-rpc-service"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181?client=zkclient"/>

    <dubbo:protocol name="dubbo" port="20881"/>

    <!--<dubbo:monitor protocol="registry"/>-->

    <!-- 商品服务 -->
    <bean id="shopGoodsService" class="cn.caohangwei.mall.shop.rpc.service.impl.ShopGoodsServiceImpl"/>
    <dubbo:service interface="cn.caohangwei.mall.shop.rpc.api.ShopGoodsService" ref="shopGoodsService" timeout="10000"/>

    <!-- 商品服务 -->
    <bean id="shopSpikeGoodsService" class="cn.caohangwei.mall.shop.rpc.service.impl.ShopSpikeGoodsServiceImpl"/>
    <dubbo:service interface="cn.caohangwei.mall.shop.rpc.api.ShopSpikeGoodsService" ref="shopSpikeGoodsService" timeout="10000"/>

    <!-- 订单服务 -->
    <bean id="shopOrderInfoService" class="cn.caohangwei.mall.shop.rpc.service.impl.ShopOrderInfoServiceImpl"/>
    <dubbo:service interface="cn.caohangwei.mall.shop.rpc.api.ShopOrderInfoService" ref="shopOrderInfoService" timeout="10000"/>

    <!-- 商品服务 -->
    <bean id="shopSpikeOrderService" class="cn.caohangwei.mall.shop.rpc.service.impl.ShopSpikeOrderServiceImpl"/>
    <dubbo:service interface="cn.caohangwei.mall.shop.rpc.api.ShopSpikeOrderService" ref="shopSpikeOrderService" timeout="10000"/>

</beans>